{#
/**
 * Archive Decklist Template
 *
 * Variables:
 * - posts (array): Array of decklist posts
 * - posts.pagination (array): Pagination data (Timber 2.0)
 * - all_authors, all_archetypes, all_colors (array): Terms for filters
 * - current_author, current_archetype, current_color (string): Active filters
 */
#}

{% extends "layouts/base.twig" %}

{% block content %}

{# Hero Section #}
<section class="py-16 bg-gradient-to-b from-bg-primary to-bg-secondary relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl md:text-6xl font-heading font-bold text-magic-gradient mb-6">
                {{ __('Decklists PDC') }}
            </h1>
            <p class="text-xl text-text-secondary max-w-2xl mx-auto leading-relaxed">
                {{ __('Découvrez notre collection de decklists pour le format Pauper Duel Commander') }}
            </p>
        </div>
    </div>
</section>

{# Filters Section #}
<section class="py-8 bg-bg-secondary/50 border-b border-magic-gold/10">
    <div class="container mx-auto px-6">
        <div class="max-w-7xl mx-auto">
            <form method="get" class="grid md:grid-cols-3 gap-4">
                {# Author Filter #}
                <div>
                    <label class="block text-sm font-semibold text-text-secondary mb-2">
                        {{ __('Auteur') }}
                    </label>
                    <select name="deck_author"
                            class="w-full px-4 py-2 bg-bg-primary border border-magic-gold/20 rounded-lg text-text-primary focus:border-brand-orange focus:outline-none transition-colors"
                            onchange="this.form.submit()">
                        <option value="">{{ __('Tous les auteurs') }}</option>
                        {% for author in all_authors %}
                            <option value="{{ author.slug }}" {{ current_author == author.slug ? 'selected' : '' }}>
                                {{ author.name }} ({{ author.count }})
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Archetype Filter #}
                <div>
                    <label class="block text-sm font-semibold text-text-secondary mb-2">
                        {{ __('Archétype') }}
                    </label>
                    <select name="deck_archetype"
                            class="w-full px-4 py-2 bg-bg-primary border border-magic-gold/20 rounded-lg text-text-primary focus:border-brand-orange focus:outline-none transition-colors"
                            onchange="this.form.submit()">
                        <option value="">{{ __('Tous les archétypes') }}</option>
                        {% for archetype in all_archetypes %}
                            <option value="{{ archetype.slug }}" {{ current_archetype == archetype.slug ? 'selected' : '' }}>
                                {{ archetype.name }} ({{ archetype.count }})
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Color Filter #}
                <div>
                    <label class="block text-sm font-semibold text-text-secondary mb-2">
                        {{ __('Couleur') }}
                    </label>
                    <select name="deck_color"
                            class="w-full px-4 py-2 bg-bg-primary border border-magic-gold/20 rounded-lg text-text-primary focus:border-brand-orange focus:outline-none transition-colors"
                            onchange="this.form.submit()">
                        <option value="">{{ __('Toutes les couleurs') }}</option>
                        {% for color in all_colors %}
                            <option value="{{ color.slug }}" {{ current_color == color.slug ? 'selected' : '' }}>
                                {{ color.name }} ({{ color.count }})
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Reset button #}
                {% if current_author or current_archetype or current_color %}
                    <div class="md:col-span-3 flex justify-center">
                        <a href="{{ site.url }}/decklist"
                           class="text-sm text-brand-orange hover:text-magic-gold transition-colors">
                            {{ __('Réinitialiser les filtres') }}
                        </a>
                    </div>
                {% endif %}
            </form>
        </div>
    </div>
</section>

{# Decklists Grid #}
<section class="py-16 bg-bg-primary">
    <div class="container mx-auto px-6">
        <div class="max-w-7xl mx-auto">
            {% if deck_posts %}
                <div class="flex flex-wrap gap-6 mb-12">
                    {% for item in deck_posts %}
                        <article class="group relative w-full sm:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)] xl:w-[calc(25%-18px)]">
                            <a href="{{ item.post.link }}" class="block">
                                <div class="relative overflow-hidden rounded-xl bg-bg-secondary border border-magic-gold/10 hover:border-brand-orange/40 transition-all duration-300 shadow-card hover:shadow-card-hover">
                                    {# Commander Image #}
                                    <div class="aspect-[4/3] overflow-hidden bg-gradient-to-br from-bg-secondary to-bg-primary">
                                        <div class="w-full h-full flex items-center justify-center">
                                            <svg class="w-16 h-16 text-magic-gold/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                                            </svg>
                                        </div>
                                    </div>

                                    {# Content #}
                                    <div class="p-4">
                                        {# Commander Name #}
                                        {% if item.commander_name %}
                                            <p class="text-xs text-magic-gold uppercase tracking-wider mb-1 font-semibold">
                                                {{ item.commander_name }}
                                            </p>
                                        {% endif %}

                                        {# Title #}
                                        <h2 class="text-lg font-heading font-bold text-text-primary group-hover:text-brand-orange transition-colors mb-2 line-clamp-2">
                                            {{ item.post.title }}
                                        </h2>

                                        {# Taxonomies #}
                                        <div class="flex flex-wrap gap-2 mb-3">
                                            {% if item.deck_archetype %}
                                                {% for archetype in item.deck_archetype|slice(0, 1) %}
                                                    <span class="text-xs px-2 py-1 bg-brand-orange/20 border border-brand-orange/40 rounded text-brand-orange">
                                                        {{ archetype.name }}
                                                    </span>
                                                {% endfor %}
                                            {% endif %}

                                            {% if item.deck_color %}
                                                {% for color in item.deck_color|slice(0, 1) %}
                                                    <span class="text-xs px-2 py-1 glass-effect border border-magic-gold/40 rounded text-magic-gold">
                                                        {{ color.name }}
                                                    </span>
                                                {% endfor %}
                                            {% endif %}
                                        </div>

                                        {# Author #}
                                        {% if item.deck_author %}
                                            <p class="text-xs text-text-muted">
                                                {% for author in item.deck_author %}
                                                    {{ author.name }}
                                                {% endfor %}
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                            </a>
                        </article>
                    {% endfor %}
                </div>

                {# Pagination #}
                {% if posts.pagination %}
                    <div class="flex justify-center gap-2">
                        {% if posts.pagination.prev %}
                            <a href="{{ posts.pagination.prev.link }}"
                               class="px-4 py-2 bg-bg-secondary border border-magic-gold/20 rounded-lg text-text-primary hover:border-brand-orange hover:text-brand-orange transition-colors">
                                {{ __('Précédent') }}
                            </a>
                        {% endif %}

                        {% for page in posts.pagination.pages %}
                            {% if page.link %}
                                <a href="{{ page.link }}"
                                   class="px-4 py-2 {{ page.current ? 'bg-brand-orange text-white' : 'bg-bg-secondary border border-magic-gold/20 text-text-primary hover:border-brand-orange hover:text-brand-orange' }} rounded-lg transition-colors">
                                    {{ page.title }}
                                </a>
                            {% else %}
                                <span class="px-4 py-2 text-text-muted">{{ page.title }}</span>
                            {% endif %}
                        {% endfor %}

                        {% if posts.pagination.next %}
                            <a href="{{ posts.pagination.next.link }}"
                               class="px-4 py-2 bg-bg-secondary border border-magic-gold/20 rounded-lg text-text-primary hover:border-brand-orange hover:text-brand-orange transition-colors">
                                {{ __('Suivant') }}
                            </a>
                        {% endif %}
                    </div>
                {% endif %}

            {% else %}
                {# No decklists found #}
                <div class="text-center py-16">
                    <svg class="w-24 h-24 text-magic-gold/20 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <h2 class="text-2xl font-heading font-bold text-magic-gradient mb-4">
                        {{ __('Aucune decklist trouvée') }}
                    </h2>
                    <p class="text-text-secondary mb-6">
                        {{ __('Essayez de modifier vos filtres pour voir plus de résultats.') }}
                    </p>
                    <a href="{{ site.url }}/decklist"
                       class="inline-block px-6 py-3 bg-brand-orange text-white font-semibold rounded-lg hover:bg-brand-orange/90 transition-colors">
                        {{ __('Voir toutes les decklists') }}
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</section>

{% endblock %}
