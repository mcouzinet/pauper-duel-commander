{# Decklists Grid #}
<section class="py-16 bg-bg-primary">
    <div class="container mx-auto px-6">
        <div class="max-w-7xl mx-auto">
            {% if deck_posts %}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-12">
                    {% for item in deck_posts %}
                        <article class="group relative">
                            <a href="{{ item.post.link }}" class="block h-full">
                                <div class="relative overflow-hidden rounded-xl bg-bg-secondary border border-magic-gold/10 hover:border-brand-orange/40 transition-all duration-300 shadow-card hover:shadow-card-hover h-full flex flex-col">
                                    {# Commander Image #}
                                    <div class="aspect-[4/3] overflow-hidden bg-gradient-to-br from-bg-secondary to-bg-primary flex-shrink-0">
                                        {% if item.commander_image %}
                                            <img src="{{ item.commander_image }}"
                                                 alt="{{ item.commander_name }}"
                                                 class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                                                 loading="lazy">
                                        {% else %}
                                            <div class="w-full h-full flex items-center justify-center">
                                                <svg class="w-16 h-16 text-magic-gold/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                                                </svg>
                                            </div>
                                        {% endif %}
                                    </div>

                                    {# Content #}
                                    <div class="p-4 flex-1 flex flex-col">
                                        <div class="flex ">
                                            <div class="flex items-center gap-2 mr-auto">
                                                {% if item.deck_color %}
                                                    {% for color in item.deck_color|slice(0, 1) %}
                                                        {{ function('Deck_Renderer::format_color_symbol', color.name)|raw }}
                                                    {% endfor %}
                                                {% endif %}
                                            </div>

                                            {# Taxonomies #}
                                            <div class="flex flex-wrap gap-2 ml-auto">
                                                {% if item.deck_archetype %}
                                                    {% for archetype in item.deck_archetype|slice(0, 1) %}
                                                        <span class="text-xs px-2 py-1 glass-effect border border-white/10 rounded text-text-secondary">
                                                            {{ archetype.name }}
                                                        </span>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>
                                        </div>

                                        {# Title #}
                                        <h2 class="text-2xl font-heading font-bold text-text-primary group-hover:text-brand-orange transition-colors mt-2 line-clamp-2">
                                            {{ item.post.title }}
                                        </h2>

                                        {# Author - Nom du joueur caché
                                        {% if item.deck_author %}
                                            <p class="text-xs text-text-muted">
                                                {% for author in item.deck_author %}
                                                    {{ author.name }}
                                                {% endfor %}
                                            </p>
                                        {% endif %}
                                        #}
                                    </div>
                                </div>
                            </a>
                        </article>
                    {% endfor %}
                </div>

                {# Pagination #}
                {% if posts.pagination %}
                    <div class="flex justify-center gap-2">
                        {% if posts.pagination.prev %}
                            <a href="{{ posts.pagination.prev.link }}"
                               class="px-4 py-2 bg-bg-secondary border border-magic-gold/20 rounded-lg text-text-primary hover:border-brand-orange hover:text-brand-orange transition-colors">
                                {{ __('Précédent', 'pdc-theme') }}
                            </a>
                        {% endif %}

                        {% for page in posts.pagination.pages %}
                            {% if page.link %}
                                <a href="{{ page.link }}"
                                   class="px-4 py-2 {{ page.current ? 'bg-brand-orange text-white' : 'bg-bg-secondary border border-magic-gold/20 text-text-primary hover:border-brand-orange hover:text-brand-orange' }} rounded-lg transition-colors">
                                    {{ page.title }}
                                </a>
                            {% else %}
                                <span class="px-4 py-2 text-text-muted">{{ page.title }}</span>
                            {% endif %}
                        {% endfor %}

                        {% if posts.pagination.next %}
                            <a href="{{ posts.pagination.next.link }}"
                               class="px-4 py-2 bg-bg-secondary border border-magic-gold/20 rounded-lg text-text-primary hover:border-brand-orange hover:text-brand-orange transition-colors">
                                {{ __('Suivant', 'pdc-theme') }}
                            </a>
                        {% endif %}
                    </div>
                {% endif %}

            {% else %}
                {# No decklists found #}
                <div class="text-center py-16">
                    <svg class="w-24 h-24 text-magic-gold/20 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <h2 class="text-2xl font-heading font-bold text-magic-gradient mb-4">
                        {{ __('Aucune decklist trouvée', 'pdc-theme') }}
                    </h2>
                    <p class="text-text-secondary mb-6">
                        {{ __('Essayez de modifier vos filtres pour voir plus de résultats.', 'pdc-theme') }}
                    </p>
                    <a href="{{ site.url }}/decklist"
                       class="inline-block px-6 py-3 bg-brand-orange text-white font-semibold rounded-lg hover:bg-brand-orange/90 transition-colors">
                        {{ __('Voir toutes les decklists', 'pdc-theme') }}
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</section>

