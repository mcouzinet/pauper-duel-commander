{% extends "layouts/base.twig" %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        {% if posts %}
            <div class="grid gap-8">
                {% for post in posts %}
                    <article class="bg-white shadow-md rounded-lg p-6">
                        <h2 class="text-3xl font-bold mb-4">
                            <a href="{{ post.link }}" class="text-blue-600 hover:text-blue-800">
                                {{ post.title }}
                            </a>
                        </h2>
                        <div class="text-gray-600 mb-4">
                            {{ post.date }} par {{ post.author.name }}
                        </div>
                        <div class="prose max-w-none">
                            {{ post.preview }}
                        </div>
                        <a href="{{ post.link }}" class="inline-block mt-4 text-blue-600 hover:text-blue-800">
                            Lire la suite &rarr;
                        </a>
                    </article>
                {% endfor %}
            </div>

            <div class="mt-8">
                {{ function('the_posts_pagination') }}
            </div>
        {% else %}
            <div class="text-center py-12">
                <h2 class="text-2xl font-bold mb-4">Aucun contenu trouvé</h2>
                <p class="text-gray-600">Désolé, aucun contenu ne correspond à votre recherche.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
