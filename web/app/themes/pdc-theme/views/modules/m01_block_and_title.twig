{#
/**
 * Module M01 - Block and Title
 *
 * Variables:
 * - title (string): Titre du bloc
 * - content (wysiwyg): Contenu du bloc
 * - background_color (string): Couleur de fond (optionnel)
 * - text_color (string): Couleur du texte (optionnel)
 * - key (int): Index du module dans la boucle
 */
#}

<section id="module{{ key }}" class="py-24 relative overflow-hidden">

    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center mb-20">
            <h2 class="text-4xl md:text-5xl font-heading font-bold text-magic-gradient mb-6">
                {{ module.title }}
            </h2>
            <p class="text-xl text-text-secondary max-w-3xl mx-auto leading-relaxed">
                {{ module.desc|raw }}
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-7xl mx-auto">
            {% for bloc in module.blocs %}
                <div class="p-8 group">
                    <div class="text-center">
                        <h3 class="text-4xl font-heading font-semibold text-magic-gold mb-4 group-hover:text-magic-gold-light transition-colors">
                            {{ bloc.title }}
                        </h3>
                        <p class="text-text-secondary leading-relaxed">
                            {{ bloc.desc }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>