{#
/**
 * Module: M09 - Community
 *
 * Displays community features and association callout
 *
 * @var array module ACF module data
 */
#}

<section class="py-16 bg-gradient-to-b from-bg-primary to-bg-secondary relative overflow-hidden">
    <div class="container mx-auto px-6">
        <div class="max-w-7xl mx-auto">
            {# Header #}
            {% if module.title or module.description %}
                <div class="text-center mb-16">
                    {% if module.title %}
                        <h2 class="text-4xl md:text-5xl font-heading font-bold text-magic-gradient mb-6">
                            {{ module.title }}
                        </h2>
                    {% endif %}

                    {% if module.description %}
                        <div class="text-lg text-text-secondary max-w-3xl mx-auto prose prose-invert">
                            {{ module.description|raw }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            {# Features Grid #}
            {% if module.features %}
                <div class="grid md:grid-cols-2 gap-8 mb-12">
                    {% for feature in module.features %}
                        <div class="glass-effect border border-card-border rounded-xl p-8 hover:border-brand-orange/50 transition-all duration-300 group">
                            {# Title #}
                            {% if feature.title %}
                                <h3 class="text-4xl font-heading font-bold text-magic-gold mb-4">
                                    {{ feature.title }}
                                </h3>
                            {% endif %}

                            {# Description #}
                            {% if feature.description %}
                                <p class="text-text-secondary leading-relaxed">
                                    {{ feature.description }}
                                </p>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            {# Association Callout #}
            {% if module.callout_title or module.callout_description or module.callout_button %}
                <div class="glass-effect border-2 border-brand-orange/40 rounded-xl p-8 md:p-10 bg-gradient-to-br from-brand-orange/5 to-transparent">
                    <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6">
                        <div class="flex-1">
                            {% if module.callout_title %}
                                <h3 class="text-2xl md:text-3xl font-heading font-bold text-magic-gradient mb-3">
                                    {{ module.callout_title }}
                                </h3>
                            {% endif %}

                            {% if module.callout_description %}
                                <p class="text-text-secondary text-lg leading-relaxed">
                                    {{ module.callout_description }}
                                </p>
                            {% endif %}
                        </div>

                        {% if module.callout_button %}
                            <a href="{{ module.callout_button.url }}"
                               class="inline-flex items-center gap-3 px-8 py-4 bg-[#5865F2] hover:bg-[#5865F2]/90 text-white font-heading font-bold rounded-lg transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl whitespace-nowrap"
                               {% if module.callout_button.target %}target="{{ module.callout_button.target }}"{% endif %}
                               {% if module.callout_button.target == '_blank' %}rel="noopener noreferrer"{% endif %}>
                                {# Discord Icon SVG #}
                                <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                                </svg>
                                <span>{{ module.callout_button.title }}</span>
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</section>
