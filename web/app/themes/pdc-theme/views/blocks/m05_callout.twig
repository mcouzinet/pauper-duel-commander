{#
/**
 * Module M05 - Encart Important / Callout
 *
 * Bloc centré avec bordure accentuée pour mettre en avant
 * des informations importantes, avertissements ou astuces
 *
 * Variables:
 * - module.type (string): "info", "warning", "tip"
 * - module.title (string): Titre de l'encart
 * - module.content (wysiwyg): Contenu
 * - module.icon_svg (textarea): Icône SVG personnalisée (optionnel)
 * - key (int): Unique ID
 */
#}

{# Define colors based on type #}
{% set type_config = {
    'info': {
        'border': 'border-blue-500/50',
        'bg': 'from-blue-500/10 to-transparent',
        'icon_color': 'text-blue-400',
        'title_color': 'text-blue-300',
        'default_icon': '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>'
    },
    'warning': {
        'border': 'border-brand-orange/50',
        'bg': 'from-brand-orange/10 to-transparent',
        'icon_color': 'text-brand-orange',
        'title_color': 'text-brand-orange-light',
        'default_icon': '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>'
    },
    'tip': {
        'border': 'border-green-500/50',
        'bg': 'from-green-500/10 to-transparent',
        'icon_color': 'text-green-400',
        'title_color': 'text-green-300',
        'default_icon': '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>'
    }
} %}

{% set config = type_config[module.type]|default(type_config.info) %}

<section id="module{{ key }}" class="py-12 relative">
    <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
            <div class="glass-effect border-2 {{ config.border }} rounded-xl p-8 md:p-10 bg-gradient-to-br {{ config.bg }}">
                <div class="flex gap-6">
                    {# Icon #}
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 {{ config.icon_color }}">
                            {% if module.icon_svg %}
                                {{ module.icon_svg|raw }}
                            {% else %}
                                {{ config.default_icon|raw }}
                            {% endif %}
                        </div>
                    </div>

                    {# Content #}
                    <div class="flex-1">
                        {% if module.title %}
                            <h3 class="text-2xl font-heading font-bold {{ config.title_color }} mb-4">
                                {{ module.title }}
                            </h3>
                        {% endif %}

                        <div class="prose prose-invert max-w-none text-text-secondary">
                            {{ module.content|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
